.container
    .media
        a.pull-left(href='', ng-click='showMe()')
            .thumbnail#imgShow
                img.media-object(alt="Няма Снимка",ng-if="Product.thumbnail", ng-src='/thumb/{{Product.thumbnail}}')

        .media-body
            .checkbox
                label
                    input(type="checkbox", ng-model='Product.flagNewCommentAdded', ng-bind = 'Product.flagNewCommentAdded', ng-change='changeForUpdate()')
                    | Is new comment
            .checkbox
                label
                    input.checkbox(type="checkbox", ng-model='Product.flagIsNew', ng-bind = 'Product.flagIsNew', ng-change='changeForUpdate()')
                    | Is it new

            a.btn.btn-primary(href='/', ng-click="updateProduct()", ng-show = 'readyForUpdate') Update
            a.btn.btn-warning(href='/', ng-click = 'deleteProduct()') Delete




    form.form-horizontal(role="form")
        .form-group
            label.col-sm-4.control-label Наименование:
            .col-sm-8
                input.form-control(autofocus="autofocus", type="text", ng-model="Product.name", ng-bind='Product.name', ng-change='changeForUpdate()')
    form.form-horizontal(role="form")
        .form-group
            label.col-sm-4.control-label Дата на добавяне:
            .col-sm-8
                input.form-control.input-sm(type="text", ng-model="Product.dateAdded", ng-bind='Product.dateAdded')
    hr
    .row
        .col-md-6
            .panel.panel-success
                .panel-heading ЗА:
                .panel-body
                    ul.list-unstyled
                        li.panel.panel-default(ng-repeat='pros in Product.pros')
                            .panel-heading
                                form.form-inline
                                    .form-group
                                        .checkbox
                                            label
                                                input(type="checkbox", ng-model='pros.flagIsNew', ng-bind = 'pros.flagIsNew', ng-change='changeForUpdate()')
                                                | is New
                                            button.btn.btn-warning.pull-right(ng-click="removeCommentFromPros(pros)") Remove
                            .panel-body
                                textarea.form-control(rows=5, ng-model='pros.content', ng-bind = 'pros.content')
                            .panel-footer.pros-color
                                br
                                | Date:&nbsp
                                span(ng-bind = 'pros.dateAdded | limitTo : 10')

        .col-md-6
            .panel.panel-danger
                .panel-heading ПРОТИВ:
                .panel-body
                    ul.list-unstyled
                        li.panel.panel-default(ng-repeat='cons in Product.cons')
                            .panel-heading
                                form.form-inline
                                    .form-group
                                        .checkbox
                                            label
                                                input.checkbox(type="checkbox", ng-model='cons.flagIsNew', ng-bind = 'cons.flagIsNew', ng-change='changeForUpdate()')
                                                | is New
                                            button.btn.btn-warning.pull-right(ng-click="removeCommentFromCons(cons)") Remove
                            .panel-body
                                textarea.form-control(rows=5, ng-model='cons.content', ng-bind = 'cons.content')
                            .panel-footer.cons-color
                                br
                                | Date:&nbsp
                                span(ng-bind = 'cons.dateAdded | limitTo : 10')


